<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chef"
    tools:context=".Activity.registerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/editTextRegUserNick"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_login_textview"
            android:ems="10"
            android:gravity="center"
            android:hint="Kullanıcı Adınız"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextRegUserName"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_login_textview"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:hint="Adınız"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextRegUserSurname"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_login_textview"
            android:ems="10"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:hint="Soyadınız"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextRegUserPassword"
            android:layout_width="205dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_login_textview"
            android:ems="10"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:hint="Şifreniz"
            android:inputType="textPassword"
            android:textColor="#090101" />

        <Button
            android:id="@+id/button"
            android:layout_width="106dp"
            android:layout_height="54dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_button"
            android:onClick="register"
            android:text="Kayıt Ol" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>